<section id="home">
	<div>
		<h1>Darshan Rander</h1>
		<h2>Software Developer</h2>
	</div>
	<img height="auto" width="30%" src="darshan-min.jpg" alt="Darshan Rander" />
</section>

<style>
	#home {
		height: 100vh;
		display: flex;
		justify-content: space-evenly;
		align-items: center;
	}

	#home h1 {
		font-size: 5vw;
		line-height: 1vw;
	}

	#home h2 {
		font-size: 2vw;
	}

	#home img {
		width: 30%;
		border-radius: 50%;
	}

	@media screen and (max-width: 900px) {
		#home {
			padding: 0 10%;
			flex-direction: column-reverse;
		}

		#home h1 {
			font-size: 5vh;
			line-height: 1em;
		}

		#home h2 {
			font-size: 2.2vh;
		}

		#home img {
			width: auto;
			height: 40%;
			border-radius: 50%;
		}
	}
</style>
