---
type Props = {
	name: string;
	years: string;
	image: {
		src: string;
		alt: string;
	};
	description: string[];
	link: { href: string; text: string };
	position: string;
};
const { name, years, image, description, link, position } = Astro.props;
---

<div class="card">
	<img
		width="100%"
		height="auto"
		loading="lazy"
		src={image.src}
		alt={image.alt}
	/>
	<div class="info">
		<div class="name">{name} - {position}</div>
		<ul class="description">
			{description.map((item) => <li>{item}</li>)}
		</ul>
		<div class="links">
			<a href={link.href} target="_blank" rel="noreferrer">{link.text}</a>
		</div>
		<div class="years">{years}</div>
	</div>
</div>

<style>
	.card {
		background-color: var(--card-bg);
		padding: 1.5em;
		border: var(--card-border);
		border-radius: var(--card-radius);
		backdrop-filter: blur(8px);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 40px var(--glow-color);
		border-color: rgba(136, 211, 255, 0.3);
	}

	.card ul {
		padding-left: 20px;
	}

	.card img {
		width: 100%;
		height: 200px;
		object-fit: contain;
		margin-bottom: 1em;
		border-radius: 5px;
	}

	.name {
		margin-bottom: 1em;
		font-weight: bold;
		font-size: 20px;
		font-size: clamp(18px, 2vw, 20px);
	}

	.description,
	.links {
		margin-bottom: 1em;
		line-height: 1.4em;
		font-size: 16px;
		font-size: clamp(15px, 2vw, 17px);
	}

	.links i {
		text-decoration: none;
	}

	.links a:hover {
		color: var(--accent-color);
	}

	.years {
		background-color: #4242425e;
		width: fit-content;
		padding: 0.4em 1em;
		margin-right: 0.5em;
		margin-top: 0.5em;
		border-radius: 1em;
		line-height: 1.5em;
	}

	.info .description {
		margin-bottom: 2em;
	}

	@media screen and (max-width: 900px) {
		.description,
		.links {
			margin-bottom: 1em;
			line-height: 1.4em;
			font-size: 1.9vh;
		}
	}
</style>
